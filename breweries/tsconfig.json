{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "types": ["vite/client", "@types/jest"],
    "paths": {
      "@/*": [
        "*"
      ],
      "@/tests/*": ["../tests/*"],
    },
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src",
    "tests"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}